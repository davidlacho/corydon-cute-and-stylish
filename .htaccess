# HTTP to HTTPS Redirect (SEO-friendly 301 permanent redirect)
# This ensures all HTTP traffic is redirected to HTTPS
# Must be at the top before other rules
<IfModule mod_rewrite.c>
    RewriteEngine On
    
    # Force HTTPS - redirect HTTP to HTTPS
    # Check if HTTPS is not already being used
    RewriteCond %{HTTPS} off
    # Redirect to HTTPS version of the same URL
    RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]
</IfModule>

# Cache Control Headers for Stay Winnipeg
# Long cache times for static assets to improve performance

# Enable Expires headers
<IfModule mod_expires.c>
    ExpiresActive On
    
    # Images - 1 year (immutable assets)
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/jpg "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/webp "access plus 1 year"
    ExpiresByType image/avif "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
    ExpiresByType image/x-icon "access plus 1 year"
    
    # CSS and JavaScript - 1 year (with versioning/hashing)
    ExpiresByType text/css "access plus 1 year"
    ExpiresByType application/javascript "access plus 1 year"
    ExpiresByType text/javascript "access plus 1 year"
    
    # Fonts - 1 year
    ExpiresByType font/woff "access plus 1 year"
    ExpiresByType font/woff2 "access plus 1 year"
    ExpiresByType application/font-woff "access plus 1 year"
    ExpiresByType application/font-woff2 "access plus 1 year"
    ExpiresByType font/ttf "access plus 1 year"
    ExpiresByType font/otf "access plus 1 year"
    ExpiresByType application/vnd.ms-fontobject "access plus 1 year"
    
    # JSON data files - 1 day (may be updated)
    ExpiresByType application/json "access plus 1 day"
    ExpiresByType text/json "access plus 1 day"
    
    # HTML files - 1 hour (content may change)
    ExpiresByType text/html "access plus 1 hour"
    
    # XML files (sitemap, etc.) - 1 day
    ExpiresByType application/xml "access plus 1 day"
    ExpiresByType text/xml "access plus 1 day"
    
    # Manifest and other web app files - 1 week
    ExpiresByType application/manifest+json "access plus 1 week"
    ExpiresByType text/cache-manifest "access plus 1 week"
    
    # Default - 1 month for other files
    ExpiresDefault "access plus 1 month"
</IfModule>

# Cache-Control headers (for better browser support)
<IfModule mod_headers.c>
    # Images - 1 year with immutable flag
    <FilesMatch "\.(jpg|jpeg|png|gif|webp|avif|svg|ico)$">
        Header set Cache-Control "public, max-age=31536000, immutable"
    </FilesMatch>
    
    # CSS and JavaScript - 1 year with immutable flag
    <FilesMatch "\.(css|js)$">
        Header set Cache-Control "public, max-age=31536000, immutable"
    </FilesMatch>
    
    # Fonts - 1 year with immutable flag
    <FilesMatch "\.(woff|woff2|ttf|otf|eot)$">
        Header set Cache-Control "public, max-age=31536000, immutable"
    </FilesMatch>
    
    # JSON data files - 1 day
    <FilesMatch "\.(json)$">
        Header set Cache-Control "public, max-age=86400"
    </FilesMatch>
    
    # HTML files - 1 hour
    <FilesMatch "\.(html|htm)$">
        Header set Cache-Control "public, max-age=3600, must-revalidate"
    </FilesMatch>
    
    # XML files - 1 day
    <FilesMatch "\.(xml)$">
        Header set Cache-Control "public, max-age=86400"
    </FilesMatch>
    
    # Manifest files - 1 week
    <FilesMatch "\.(webmanifest|manifest)$">
        Header set Cache-Control "public, max-age=604800"
    </FilesMatch>
</IfModule>

# Enable compression for text-based files
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript application/json application/xml
</IfModule>

